# =====================================================
# ALZAIN FURNITURE - ENVIRONMENT VARIABLES
# =====================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Server Configuration
PORT=3000
NODE_ENV=production

# Production URL (your domain)
PRODUCTION_URL=https://yourdomain.com

# =====================================================
# API KEYS (Keep these secret!)
# =====================================================

# Google Gemini API Key
# Get it from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (optional)
# Get it from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Stability AI API Key (optional)
# Get it from: https://platform.stability.ai/account/keys
STABILITY_API_KEY=your_stability_api_key_here

# =====================================================
# ADMIN AUTHENTICATION
# =====================================================

# Admin password hash (SHA-256)
# Generate with: node -e "console.log(require('crypto').createHash('sha256').update('your_password').digest('hex'))"
# Default: admin123 = 240be518fabd2724ddb6f04eeb9d5b9c5d9b1e6f2f9e1d1c1b1a19181716151413
ADMIN_PASSWORD_HASH=240be518fabd2724ddb6f04eeb9d5b9c5d9b1e6f2f9e1d1c1b1a19181716151413

# =====================================================
# SECURITY SETTINGS
# =====================================================

# Session expiry in minutes
SESSION_EXPIRY_MINUTES=30

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Rate limiting (per hour)
AI_RATE_LIMIT_MAX=20
